generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
//USER MODEL
model User {
userid      Int      @id @default(autoincrement())
email  String    @unique
pan_number  String 
aadhaar_last_4  String
aadhaar_verified  Boolean 
phone_verified_at  DateTime
created_at    DateTime
updated_at    DateTime
deleted_at    DateTime
chats Chat[]
loans Loan[]
}

//Chat session
model Chat{
  session_id  Int @unique
  session_token  String // generally browser current session 
  userid Int    @unique
  user      User @relation(fields: [userid],references: [userid])
  created_at DateTime
  last_active_at DateTime
  loan_application_id  Int 
  //each chat session must be connected to separete loanapplication id 
}

model Loan{
   loan_application_id  Int @id @default(autoincrement()) @unique
   status String
   type String
   amount String
   Payed_amount String
   created_at    DateTime
   updated_at    DateTime
   Tenure   String
   //ig it should link with session id and  userid
   userid Int
   user  User @relation(fields: [userid],references: [userid])
}

